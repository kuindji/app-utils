{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./src",
        "sourceMap": false,
        "noImplicitAny": false,
        "declaration": true,
        "strict": true,
        "allowJs": false,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ],
        "types": [
            "bun"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "./dist/**/*"
    ]
}
